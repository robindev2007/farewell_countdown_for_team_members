generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Message {
  id        String   @id @default(cuid())
  name      String?
  content   String
  color     String? // To store which accent color they chose
  createdAt DateTime @default(now())
}
